FROM kylevedder/cudagl:11.7.1-devel-ubuntu20.04
SHELL ["/bin/bash", "-c"]
# Set the timezone info because otherwise tzinfo blocks install 
# flow and ignores the non-interactive frontend command ðŸ¤¬ðŸ¤¬ðŸ¤¬
RUN ln -snf /usr/share/zoneinfo/America/New_York /etc/localtime && echo "/usr/share/zoneinfo/America/New_York" > /etc/timezone

# Core system packages
RUN apt-get update --fix-missing
RUN apt install -y software-properties-common wget curl gpg gcc git make

# Install miniconda to /miniconda
RUN curl -LO http://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
RUN bash Miniconda3-latest-Linux-x86_64.sh -p /miniconda -b
RUN rm Miniconda3-latest-Linux-x86_64.sh
ENV PATH=/miniconda/bin:${PATH}
RUN conda update -y conda

RUN apt install -y apt-utils

ENV TORCH_CUDA_ARCH_LIST="Ampere;Turing;Pascal"
ENV FORCE_CUDA="1"
RUN conda update -y conda
RUN conda install pytorch=2 torchvision torchaudio pytorch-cuda=11.7 -c pytorch-nightly -c nvidia
RUN conda install -c fvcore -c iopath -c conda-forge fvcore iopath -y
ENV N_JOBS=32
RUN pip install "git+https://github.com/facebookresearch/pytorch3d.git@stable"
RUN git clone https://github.com/open-mmlab/mmcv.git /mmcv
WORKDIR /mmcv
RUN MMCV_WITH_OPS=1 pip install -e . -v
RUN python .dev_scripts/check_installation.py
RUN pip install pyarrow pyquaternion open3d tensorboard accelerate

ENV PYTHONPATH=/project:${PYTHONPATH}
COPY bashrc /root/.bashrc
WORKDIR /project